# TRX Tracker Configuration
# Copy this file to .env and update the values

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
ADMIN_PORT=3000

# Database Configuration
DATABASE_URL=postgresql://trontracker:password@localhost:5432/trontracker
DATABASE_MAX_CONNECTIONS=20

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=10

# Blockchain Configuration
BLOCKCHAIN_START_BLOCK=62800000
BLOCKCHAIN_BATCH_SIZE=100
BLOCKCHAIN_SCAN_INTERVAL=3

# Tron Network Configuration
TRON_NODES=https://api.trongrid.io,https://go.getblock.io/YOUR_API_KEY
TRON_TIMEOUT=30

# Webhook Configuration
WEBHOOK_MAX_RETRIES=3
WEBHOOK_TIMEOUT=30
WEBHOOK_RATE_LIMIT=100

# WebSocket Configuration
WEBSOCKET_MAX_CONNECTIONS=10000
WEBSOCKET_HEARTBEAT_INTERVAL=30

# Logging Configuration
RUST_LOG=info
LOG_FORMAT=json
LOG_FILE=/app/logs/tron-tracker.log

# Security Configuration
JWT_SECRET=your-jwt-secret-here
API_KEY_PREFIX=tk_live_
CORS_ORIGINS=*

# Performance Configuration
CACHE_TTL=300
QUERY_TIMEOUT=30
MAX_ADDRESSES_PER_QUERY=100

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

